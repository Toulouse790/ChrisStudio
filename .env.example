# ===========================================
# ChrisStudio Configuration
# ===========================================

# OpenAI (GPT-4) API
OPENAI_API_KEY=your_api_key_here

# Pexels API (free)
PEXELS_API_KEY=your_api_key_here

# Unsplash API (optional fallback)
UNSPLASH_ACCESS_KEY=your_access_key_here

# ===========================================
# Server Configuration
# ===========================================

PORT=3000
NODE_ENV=development

# CORS - Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ===========================================
# Authentication (Optional)
# ===========================================

# Set to 'true' to enable authentication
AUTH_ENABLED=false

# Admin credentials (required if AUTH_ENABLED=true)
ADMIN_USERNAME=admin
# Generate hash with: node -e "require('bcryptjs').hash('yourpassword', 12).then(console.log)"
ADMIN_PASSWORD_HASH=

# JWT settings
JWT_SECRET=change-this-to-a-secure-random-string
JWT_EXPIRATION=24h

# ===========================================
# Logging
# ===========================================

LOG_LEVEL=info

# ===========================================
# Output Directories
# ===========================================

OUTPUT_DIR=./output
ASSETS_DIR=./assets
ASSETS_DOWNLOADS_DIR=./assets/downloads

# ===========================================
# Asset Library
# ===========================================

ASSET_LIBRARY_PATH=./assets/library.json
PREFER_LOCAL_ASSETS=true
ASSET_REUSE_DAYS=7
ASSET_EPISODE_SPECIFIC_REUSE_DAYS=30
ALLOW_RECENT_ASSET_REUSE=false
ASSET_LIBRARY_MIN_SCORE=1

# Asset cleanup (automatic deletion of old downloads)
ASSET_RETENTION_DAYS=7

# ===========================================
# YouTube OAuth
# ===========================================

YOUTUBE_OAUTH_CLIENT_PATH=./secrets/youtube_oauth_client.json
YOUTUBE_TOKENS_PATH=./secrets/youtube_tokens.json

# Alternative: Direct credentials (instead of file)
# YOUTUBE_CLIENT_ID=your_client_id
# YOUTUBE_CLIENT_SECRET=your_client_secret
# YOUTUBE_REDIRECT_URIS=http://localhost:3000/api/youtube/oauth/callback

# Upload settings
YOUTUBE_UPLOAD_CHUNK_MB=8
YOUTUBE_UPLOAD_RETRIES=6
